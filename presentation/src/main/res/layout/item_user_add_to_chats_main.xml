<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_0_5_padding"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/cardview_light_background">

    <RelativeLayout
        android:id="@+id/l_i_userr_add_card_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:textSize="@dimen/default_large_text_size">

        <TextView
            android:id="@+id/tv_user_name_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_0_5_padding"
            tools:text="UserName" />

            <CheckBox
                android:id="@+id/cb_add_user"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

    </RelativeLayout>
</android.support.v7.widget.CardView>